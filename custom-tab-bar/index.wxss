/* custom-tab-bar/index.wxss */
.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 176rpx;
  z-index: 1000;
  pointer-events: none;
}

/* 毛玻璃背景 */
.tabbar__blur {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 176rpx;
  background-color: rgba(242, 242, 247, 0.8);
  backdrop-filter: blur(40rpx);
  border-top: 1rpx solid rgba(198, 198, 200, 0.5);
  pointer-events: auto;
}

/* 内容区 */
.tabbar__content {
  position: relative;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 32rpx 60rpx 0;
  pointer-events: auto;
}

/* Tab项 */
.tabbar__item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: transparent;
  border: none;
  padding: 0;
  transition: all 0.3s ease;
}

.tabbar__item::after {
  border: none;
}

.tabbar__icon-wrapper {
  width: 160rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tabbar__icon {
  font-size: 64rpx;
  transition: all 0.3s ease;
  filter: grayscale(100%);
  opacity: 0.5;
}

.tabbar__item--active .tabbar__icon {
  filter: grayscale(0%);
  opacity: 1;
  transform: scale(1.1);
}

.tabbar__icon--home {
  /* Home图标样式 */
}

.tabbar__icon--user {
  /* User图标样式 */
}

/* 中间占位 - 为悬浮按钮留空间 */
.tabbar__placeholder {
  width: 120rpx;
  flex-shrink: 0;
}

/* 悬浮Add按钮容器 */
.tabbar__add-container {
  position: absolute;
  left: 50%;
  top: 0;
  transform: translate(-50%, -50%);
  pointer-events: auto;
}

.tabbar__add {
  width: 112rpx;
  height: 112rpx;
  min-width: 112rpx;
  min-height: 112rpx;
  max-width: 112rpx;
  max-height: 112rpx;
  border-radius: 56rpx; /* 确保是正圆 */
  background-color: #007AFF; /* 系统蓝色 */
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  transition: all 0.2s cubic-bezier(0.16, 1, 0.3, 1);
}

.tabbar__add::after {
  border: none;
}

.tabbar__add--hover {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.3);
}

/* 十字加号容器 */
.tabbar__add-icon {
  position: relative;
  width: 40rpx;
  height: 40rpx;
}

/* 十字线条 */
.tabbar__add-line {
  position: absolute;
  background-color: #FFFFFF;
  border-radius: 3rpx;
}

/* 横线 */
.tabbar__add-line--h {
  top: 50%;
  left: 0;
  width: 100%;
  height: 6rpx;
  transform: translateY(-50%);
}

/* 竖线 */
.tabbar__add-line--v {
  top: 0;
  left: 50%;
  width: 6rpx;
  height: 100%;
  transform: translateX(-50%);
}
