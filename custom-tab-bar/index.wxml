<!-- custom-tab-bar/index.wxml -->
<view class="tabbar">
  <view class="tabbar__blur"></view>
  
  <view class="tabbar__content">
    <!-- Â∑¶‰æßÔºöHome -->
    <button 
      class="tabbar__item {{selected === 0 ? 'tabbar__item--active' : ''}}"
      data-path="{{tabs[0].pagePath}}"
      data-index="0"
      bindtap="switchTab"
      hover-class="none"
    >
      <view class="tabbar__icon-wrapper">
        <text class="tabbar__icon tabbar__icon--home">üè†</text>
      </view>
    </button>

    <!-- ‰∏≠Èó¥ÔºöÂç†‰Ωç -->
    <view class="tabbar__placeholder"></view>

    <!-- Âè≥‰æßÔºöProfile -->
    <button 
      class="tabbar__item {{selected === 1 ? 'tabbar__item--active' : ''}}"
      data-path="{{tabs[1].pagePath}}"
      data-index="1"
      bindtap="switchTab"
      hover-class="none"
    >
      <view class="tabbar__icon-wrapper">
        <text class="tabbar__icon tabbar__icon--user">üë§</text>
      </view>
    </button>
  </view>

  <!-- ÊÇ¨ÊµÆAddÊåâÈíÆ -->
  <view class="tabbar__add-container">
    <button
      class="tabbar__add"
      bindtap="openEditor"
      hover-class="tabbar__add--hover"
      hover-start-time="0"
      hover-stay-time="100"
    >
      <view class="tabbar__add-icon">
        <view class="tabbar__add-line tabbar__add-line--h"></view>
        <view class="tabbar__add-line tabbar__add-line--v"></view>
      </view>
    </button>
  </view>
</view>
