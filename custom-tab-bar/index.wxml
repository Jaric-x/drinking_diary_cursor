<!-- custom-tab-bar/index.wxml -->
<view class="tabbar">
  <view class="tabbar__blur"></view>
  
  <view class="tabbar__content">
    <!-- 左侧：Home -->
    <button 
      class="tabbar__item {{selected === 0 ? 'tabbar__item--active' : ''}}"
      data-path="{{tabs[0].pagePath}}"
      data-index="0"
      bindtap="switchTab"
      hover-class="none"
    >
      <view class="tabbar__icon-wrapper tabbar__icon-wrapper--home">
        <text class="iconfont tabbar__icon tabbar__icon--home">{{tabs[0].icon}}</text>
      </view>
    </button>

    <!-- 中间：占位 -->
    <view class="tabbar__placeholder"></view>

    <!-- 右侧：Profile -->
    <button 
      class="tabbar__item {{selected === 1 ? 'tabbar__item--active' : ''}}"
      data-path="{{tabs[1].pagePath}}"
      data-index="1"
      bindtap="switchTab"
      hover-class="none"
    >
      <view class="tabbar__icon-wrapper tabbar__icon-wrapper--user">
        <text class="iconfont tabbar__icon tabbar__icon--user">{{tabs[1].icon}}</text>
      </view>
    </button>
  </view>

  <!-- 悬浮Add按钮 -->
  <view class="tabbar__add-container">
    <button
      class="tabbar__add"
      bindtap="openEditor"
      hover-class="tabbar__add--hover"
      hover-start-time="0"
      hover-stay-time="100"
    >
      <view class="tabbar__add-icon">
        <view class="tabbar__add-line tabbar__add-line--h"></view>
        <view class="tabbar__add-line tabbar__add-line--v"></view>
      </view>
    </button>
  </view>
</view>
