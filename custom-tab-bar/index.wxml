<view class="tabbar">
  <view class="tabbar__blur"></view>
  <view class="tabbar__content">
    <block wx:for="{{tabs}}" wx:key="key">
      <view
        class="tabbar__item {{selected === index ? 'tabbar__item--active' : ''}}"
        data-path="{{item.pagePath}}"
        data-index="{{index}}"
        bindtap="switchTab"
        hover-class="press-scale"
      >
        <image class="tabbar__icon" src="{{selected === index ? item.activeIcon : item.icon}}" mode="aspectFit"></image>
      </view>
    </block>
  </view>
  <view class="tabbar__add-shell">
    <view class="tabbar__add-base"></view>
    <button
      class="tabbar__add"
      bindtap="openEditor"
      hover-class="tabbar__add--hover"
      hover-start-time="0"
      hover-stay-time="80"
    >
      <text class="tabbar__add-plus">ï¼‹</text>
    </button>
  </view>
</view>


