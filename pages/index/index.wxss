/* pages/index/index.wxss */
.home-page {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  background-color: var(--color-bg);
}

/* 动态背景层 */
.bg-layer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
}

.bg-layer__image {
  width: 100%;
  height: 100%;
  filter: blur(60rpx);
  transform: scale(1.2);
  opacity: 0.3;
  transition: opacity 1s ease-in-out;
}

.bg-layer__overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, 
    rgba(242, 242, 247, 0.8) 0%, 
    rgba(242, 242, 247, 0.9) 100%
  );
}

/* 顶部导航栏 */
.home-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 50;
  box-sizing: border-box;
}

.home-header__blur {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(242, 242, 247, 0.8);
  backdrop-filter: blur(40rpx);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.home-header__content {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.home-header__title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-main);
  letter-spacing: 1rpx;
}

/* 问候语栏 */
.greeting-bar {
  position: fixed;
  left: 0;
  right: 0;
  height: 120rpx;
  padding: 80rpx 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 45;
  /* z-index 设置在导航栏(50)下方，卡片(10)上方，确保始终在卡片顶层 */
  background-color: rgba(242, 242, 247, 0.98);
  backdrop-filter: blur(30rpx);
  box-sizing: border-box;
  /* 确保 padding 计算在总高度内 */
}

.greeting-text {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.greeting-text__line1 {
  font-size: 40rpx;
  font-weight: 600;
  color: #8E8E93;
  line-height: 1.2;
}

.greeting-text__line2 {
  font-size: 50rpx;
  font-weight: 700;
  color: #000000;
  line-height: 1.2;
}

.greeting-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  flex-shrink: 0;
}

.greeting-avatar__image {
  width: 100%;
  height: 100%;
}

.greeting-avatar__default {
  width: 100%;
  height: 100%;
  background-color: #E5E5EA;
  display: flex;
  align-items: center;
  justify-content: center;
}

.greeting-avatar__icon {
  font-size: 50rpx;
  color: #8E8E93;
  font-family: "iconfont" !important;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 空状态 */
.empty-state {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  z-index: 10;
}

.empty-state__icon {
  font-size: 160rpx;
  opacity: 0.3;
}

.empty-state__text {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-secondary);
}

.empty-state__hint {
  font-size: 28rpx;
  color: var(--text-placeholder);
}

/* 卡片流 */
.card-flow {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 176rpx;
  z-index: 10;
}

/* 垂直Swiper */
.vertical-swiper {
  width: 100%;
  height: 100%;
}

.vertical-item {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 卡片堆叠容器 */
.card-stack-container {
  position: relative;
  width: 100%;
  height: 900rpx;
  perspective: 2000rpx;
}

/* 卡片包装器 - 绝对定位实现堆叠 */
.diary-card-wrapper {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 600rpx;
  height: 900rpx;
  transform-origin: center center;
  transition: all 500ms cubic-bezier(0.16, 1, 0.3, 1);
  will-change: transform, opacity;
}

/* 当前卡片 (offset = 0) */
.diary-card-wrapper--offset-0 {
  transform: translate(-50%, -50%) translateX(0) scale(1) rotate(0deg);
  opacity: 1;
  z-index: 30;
  pointer-events: auto;
}

/* 第二张卡片 (offset = 1) */
.diary-card-wrapper--offset-1 {
  transform: translate(-50%, -50%) translateX(40rpx) scale(0.95) rotate(3deg);
  opacity: 1;
  z-index: 20;
  pointer-events: none;
}

/* 第三张卡片 (offset = 2) */
.diary-card-wrapper--offset-2 {
  transform: translate(-50%, -50%) translateX(70rpx) scale(0.9) rotate(6deg);
  opacity: 0.5;
  z-index: 10;
  pointer-events: none;
}

/* 第四张及更后的卡片 (offset > 2) */
.diary-card-wrapper--offset-3,
.diary-card-wrapper--offset-4,
.diary-card-wrapper--offset-5,
.diary-card-wrapper--offset-6,
.diary-card-wrapper--offset-7,
.diary-card-wrapper--offset-8,
.diary-card-wrapper--offset-9 {
  transform: translate(-50%, -50%) translateX(80rpx) scale(0.85);
  opacity: 0;
  z-index: 0;
  pointer-events: none;
}

/* 已丢弃的卡片 (offset < 0) */
.diary-card-wrapper--offset--1,
.diary-card-wrapper--offset--2,
.diary-card-wrapper--offset--3,
.diary-card-wrapper--offset--4,
.diary-card-wrapper--offset--5,
.diary-card-wrapper--offset--6,
.diary-card-wrapper--offset--7,
.diary-card-wrapper--offset--8,
.diary-card-wrapper--offset--9 {
  transform: translate(-50%, -50%) translateX(-240%) scale(0.9) rotate(-10deg);
  opacity: 0;
  z-index: 40;
  pointer-events: none;
}

/* 卡片本体样式 */
.diary-card {
  width: 100%;
  height: 100%;
  background-color: #FFFFFF;
  border-radius: var(--radius-card);
  box-shadow: var(--shadow-card);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.diary-card-wrapper--offset-0 .diary-card:active {
  transform: scale(0.98);
  transition: transform 0.2s ease;
}

.card-image {
  height: 55%;
  background-color: #F5F5F5;
  overflow: hidden;
}

.card-image__img {
  width: 100%;
  height: 100%;
}

.card-info {
  flex: 1;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
}

.card-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-main);
  text-align: center;
  line-height: 1.2;
}

.card-rating {
  display: flex;
  gap: 4rpx;
}

.card-star {
  font-size: 28rpx;
  color: #E5E5EA;
}

.card-star--filled {
  color: var(--color-star);
}

.card-description {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
  padding: 0 16rpx;
}

.card-footer {
  margin-top: auto;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  gap: 16rpx;
}

.card-tags {
  flex: 1;
  display: flex;
  gap: 12rpx;
  overflow-x: auto;
  flex-wrap: nowrap;
}

.card-tags::-webkit-scrollbar {
  display: none;
}

.card-tag {
  padding: 8rpx 20rpx;
  background-color: var(--color-tag-bg);
  color: rgba(0, 0, 0, 0.8);
  border-radius: var(--radius-tag);
  font-size: 22rpx;
  font-weight: 500;
  white-space: nowrap;
  flex-shrink: 0;
}

.card-time {
  font-size: 22rpx;
  font-weight: 500;
  color: #C6C6C8;
  flex-shrink: 0;
}

/* 日期指示器 */
.date-indicators {
  position: fixed;
  right: 8rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 24rpx; /* 12px = 24rpx */
  z-index: 30;
  pointer-events: none;
}

.date-indicator {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  transition: all 0.3s var(--ease-out-expo);
}

/* 未选中态 - 圆形小点 */
.date-indicator:not(.date-indicator--active) {
  width: 12rpx; /* 6px = 12rpx */
  height: 12rpx;
  margin-right: 8rpx; /* 距离右边缘4px = 8rpx */
}

.date-indicator__dot {
  width: 12rpx; /* 6px = 12rpx */
  height: 12rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.2); /* 半透明黑色 */
  transition: all 0.3s var(--ease-out-expo);
}

/* 选中态 - 胶囊标签 */
.date-indicator--active {
  height: 56rpx; /* 28px = 56rpx */
  padding: 0 24rpx; /* 左右内边距各12px = 24rpx */
  background-color: #000000;
  border-radius: 28rpx 0 0 28rpx; /* 左侧14px全圆角 = 28rpx */
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15); /* 柔和投影 0 4px 12px */
}

.date-indicator__text {
  font-size: 22rpx; /* 11pt ≈ 22rpx */
  font-weight: bold;
  color: #FFFFFF;
  letter-spacing: 1rpx; /* 字间距微宽 */
  line-height: 1;
  white-space: nowrap;
}
