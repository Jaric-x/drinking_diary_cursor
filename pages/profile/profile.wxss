/* pages/profile/profile.wxss */
.profile-page {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(--color-bg);
}

/* 顶部导航栏 */
.profile-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  box-sizing: border-box;
}

.profile-header__blur {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(242, 242, 247, 0.8);
  backdrop-filter: blur(40rpx);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.profile-header__content {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.profile-header__title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-main);
}

/* 滚动区域 */
.profile-scroll {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 176rpx;
}

.profile-content {
  min-height: 100%;
}

.profile-bottom-spacer {
  height: 64rpx;
}

/* 用户信息 */
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0 24rpx;
  gap: 16rpx;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

.user-avatar__image {
  width: 100%;
  height: 100%;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-main);
}

/* 统计卡片 */
.stats-card {
  margin: 0 32rpx 48rpx;
  padding: 48rpx 0;
  background-color: #FFFFFF;
  border-radius: var(--radius-card);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.03);
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex: 1;
}

.stat-icon {
  font-size: 48rpx;
  opacity: 0.8;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-main);
  line-height: 1;
}

.stat-label {
  font-size: 22rpx;
  font-weight: 500;
  color: var(--text-placeholder);
  line-height: 1;
}

.stat-divider {
  width: 1rpx;
  height: 80rpx;
  background-color: rgba(198, 198, 200, 0.3);
}

/* 照片墙 */
.photo-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rpx;
  margin: 0 32rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: var(--color-bg);
}

.photo-item {
  aspect-ratio: 1;
  background-color: #F5F5F5;
  overflow: hidden;
  position: relative;
  transition: opacity 0.2s ease;
}

.photo-item:active {
  opacity: 0.8;
}

.photo-item__image {
  width: 100%;
  height: 100%;
}

/* 空状态 */
.empty-gallery {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx 0;
  gap: 24rpx;
}

.empty-gallery__icon {
  font-size: 160rpx;
  opacity: 0.3;
}

.empty-gallery__text {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-placeholder);
}
