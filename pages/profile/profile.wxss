/* pages/profile/profile.wxss */
.profile-page {
  position: relative;
  width: 100%;
  height: 100vh;
  min-height: 100vh;
  background-color: #F2F2F7;
  /* 使用相对定位，确保子元素绝对定位正确 */
}

/* 顶部导航栏 */
.profile-header {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  box-sizing: border-box;
}

.profile-header__blur {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(242, 242, 247, 0.8);
  backdrop-filter: blur(40rpx);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.profile-header__content {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.profile-header__title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-main);
}

/* 滚动区域 */
.profile-scroll {
  position: absolute;
  left: 0;
  right: 0;
  top: 128rpx;
  bottom: 176rpx;
  /* 使用绝对定位，避免 fixed 定位在真机上的兼容性问题 */
  /* top: 64px = 128rpx (1px = 2rpx) */
}

.profile-content {
  min-height: 100%;
}

.profile-bottom-spacer {
  height: 64rpx;
}

/* 用户信息 */
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 70rpx 0 24rpx;
  gap: 16rpx;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

.user-avatar__image {
  width: 100%;
  height: 100%;
}

.user-avatar__default {
  width: 100%;
  height: 100%;
  background-color: #E5E5EA;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-avatar__icon {
  font-size: 100rpx;
  color: #8E8E93;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  color: rgba(0, 0, 0, 0.9);
}

/* 统计卡片 */
.stats-card {
  margin: 0 32rpx 48rpx;
  padding: 48rpx 0;
  background-color: #FFFFFF;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.03);
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex: 1;
}

.stat-icon {
  font-size: 48rpx;
  opacity: 0.8;
  margin-bottom: 8rpx;
}

/* 统计图标颜色 */
.stat-icon--guozhi {
  color: #007AFF; /* 蓝色 - 总杯数 */
}

.stat-icon--qianbao {
  color: #FF9500; /* 黄色/橙色 - 总花费 */
}

.stat-icon--riqi {
  color: #34C759; /* 绿色 - 记录天数 */
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: rgba(0, 0, 0, 0.9);
  line-height: 1;
}

.stat-label {
  font-size: 22rpx;
  font-weight: 500;
  color: #999999;
  line-height: 1;
}

.stat-divider {
  width: 1rpx;
  height: 80rpx;
  background-color: rgba(198, 198, 200, 0.3);
}

/* 照片墙 */
.photo-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 32rpx;
  border-radius: 32rpx;
  /* 与统计区域圆角保持一致 */
  overflow: hidden;
  background-color: #F2F2F7;
  min-height: 400rpx;
  width: calc(100% - 64rpx);
  box-sizing: border-box;
}

/* 照片墙空状态 */
.photo-grid--empty {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: transparent;
  border-radius: 32rpx;
  /* 与统计区域圆角保持一致 */
  min-height: 400rpx;
}

.photo-grid__empty {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  min-height: 400rpx;
}

.photo-grid__empty-text {
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  text-align: center;
  padding: 0 32rpx;
}

.photo-item {
  width: calc(33.333% - 2rpx);
  padding-bottom: calc(33.333% - 2rpx);
  background-color: #F5F5F5;
  overflow: hidden;
  position: relative;
  transition: opacity 0.2s ease;
  margin-right: 2rpx;
  margin-bottom: 2rpx;
  box-sizing: border-box;
}

.photo-item:nth-child(3n) {
  margin-right: 0;
}

.photo-item:active {
  opacity: 0.8;
}

.photo-item__image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: block;
}
