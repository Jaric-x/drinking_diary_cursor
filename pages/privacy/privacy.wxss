/* pages/privacy/privacy.wxss */
.privacy-page {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #FFFFFF;
}

/* 顶部导航栏 */
.privacy-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  box-sizing: border-box;
}

.privacy-header__blur {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(40rpx);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.privacy-header__content {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 32rpx;
}

.privacy-header__left {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.privacy-header__back {
  font-size: 34rpx;
  color: #007AFF;
}

.privacy-header__title {
  font-size: 34rpx;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.9);
  flex: 2;
  text-align: center;
}

.privacy-header__right {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

/* 滚动区域 */
.privacy-scroll {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.privacy-content {
  min-height: 100vh;
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-bottom: 80rpx;
  box-sizing: border-box;
}

/* 内容头部 */
.privacy-content-header {
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #E5E5EA;
}

.privacy-title {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  color: #000000;
  line-height: 1.4;
  margin-bottom: 20rpx;
}

.privacy-date {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.privacy-date-item {
  font-size: 24rpx;
  color: #8E8E93;
  line-height: 1.5;
}

/* 章节 */
.privacy-section {
  margin-bottom: 40rpx;
}

.privacy-section--last {
  margin-bottom: 0;
  padding-top: 20rpx;
}

.privacy-section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #000000;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

/* 文本 */
.privacy-text {
  display: block;
  font-size: 28rpx;
  color: #3C3C43;
  line-height: 1.8;
  margin-bottom: 20rpx;
  text-align: justify;
}

.privacy-text:last-child {
  margin-bottom: 0;
}

.privacy-text--bold {
  font-weight: bold;
  color: #000000;
}

.privacy-text--center {
  text-align: center;
}

/* 列表 */
.privacy-list {
  margin-top: 20rpx;
}

.privacy-list-item {
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  position: relative;
}

.privacy-list-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 16rpx;
  width: 8rpx;
  height: 8rpx;
  background-color: #007AFF;
  border-radius: 50%;
}

.privacy-list-item:last-child {
  margin-bottom: 0;
}

.privacy-list-item .privacy-text {
  margin-bottom: 0;
}

/* 联系方式 */
.privacy-contact {
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #F5F5F7;
  border-radius: 16rpx;
}

.privacy-contact .privacy-text {
  margin-bottom: 0;
}

