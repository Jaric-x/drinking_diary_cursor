/* pages/editor/editor.wxss */
.editor-page {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(--color-bg);
  z-index: 100;
}

/* 自定义导航栏 */
.editor-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 200;
  box-sizing: border-box;
}

.editor-header__blur {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(242, 242, 247, 0.8);
  backdrop-filter: blur(40rpx);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.editor-header__content {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
}

.editor-header__title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-main);
}

.editor-header__btn {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  padding: 16rpx;
  background: transparent;
  border: none;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.editor-header__btn::after {
  border: none;
}

.editor-header__btn--left {
  left: 16rpx;
}

.editor-header__btn--right {
  right: 16rpx;
}

.editor-header__btn-text {
  font-size: 32rpx;
  color: var(--text-main);
}

.editor-header__btn-text--primary {
  color: var(--color-primary);
}

.editor-header__icon {
  width: 40rpx;
  height: 40rpx;
}

/* 滚动区域 */
.editor-scroll {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 160rpx;
}

.editor-content {
  padding: 32rpx 0;
}

.editor-bottom-spacer {
  height: 64rpx;
}

/* 照片上传区 */
.photo-section {
  display: flex;
  justify-content: center;
  margin-bottom: 48rpx;
}

.photo-upload {
  width: 240rpx;
  height: 240rpx;
  border-radius: 48rpx;
  background-color: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  position: relative;
}

.photo-upload__placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.photo-upload__icon {
  font-size: 80rpx;
  opacity: 0.3;
}

.photo-upload__image {
  width: 100%;
  height: 100%;
}

/* 表单组 */
.form-group {
  margin: 0 32rpx 24rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.form-group--tags {
  padding: 32rpx;
}

.form-group--notes {
  padding: 32rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
}

.form-item--border {
  border-bottom: 1rpx solid rgba(198, 198, 200, 0.3);
}

.form-label {
  display: flex;
  align-items: center;
  gap: 16rpx;
  min-width: 160rpx;
}

.form-icon {
  font-size: 40rpx;
  opacity: 0.6;
}

.form-label-text {
  font-size: 34rpx;
  color: var(--text-main);
}

.form-input {
  flex: 1;
  font-size: 34rpx;
  color: var(--text-main);
  text-align: right;
}

.form-input-placeholder {
  color: var(--text-placeholder);
}

.form-input--price::before {
  content: '¥';
  color: var(--text-secondary);
}

/* 评分星星 */
.rating-stars {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  gap: 8rpx;
}

.rating-star {
  font-size: 56rpx;
  color: #E5E5EA;
  transition: all 0.2s ease;
}

.rating-star--filled {
  color: var(--color-star);
}

/* 标签相关 */
.form-tags-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-chip {
  padding: 12rpx 32rpx;
  background-color: var(--color-tag-bg);
  color: rgba(0, 0, 0, 0.7);
  border-radius: var(--radius-tag);
  font-size: 30rpx;
  font-weight: 500;
  transition: all 0.2s ease;
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
}

.tag-chip--selected {
  background-color: var(--color-primary);
  color: #FFFFFF;
}

.tag-chip__text {
  line-height: 1;
}

.tag-chip__close {
  font-size: 36rpx;
  opacity: 0.5;
  line-height: 1;
}

.custom-tag-section {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(198, 198, 200, 0.3);
}

.custom-tag-trigger {
  display: inline-flex;
  padding: 12rpx 32rpx;
  background-color: var(--color-tag-bg);
  border-radius: var(--radius-tag);
}

.custom-tag-trigger__text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.custom-tag-input-box {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.custom-tag-input {
  flex: 1;
  padding: 16rpx 24rpx;
  background-color: var(--color-bg);
  border-radius: 16rpx;
  font-size: 28rpx;
}

.custom-tag-btn {
  padding: 16rpx 32rpx;
  background-color: var(--color-primary);
  color: #FFFFFF;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  line-height: 1;
}

.custom-tag-btn::after {
  border: none;
}

.custom-tag-btn--hover {
  opacity: 0.8;
}

.custom-tag-btn--cancel {
  background-color: transparent;
  color: var(--text-secondary);
}

/* 文本域 */
.form-textarea {
  width: 100%;
  min-height: 240rpx;
  font-size: 34rpx;
  color: var(--text-main);
  line-height: 1.6;
}

/* 底部保存按钮 */
.editor-footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 32rpx;
  z-index: 100;
}

.editor-footer__blur {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(242, 242, 247, 0.9);
  backdrop-filter: blur(40rpx);
}

.save-btn {
  position: relative;
  width: 100%;
  height: 100rpx;
  background-color: var(--color-primary);
  color: #FFFFFF;
  border-radius: 28rpx;
  font-size: 34rpx;
  font-weight: 600;
  box-shadow: 0 16rpx 40rpx rgba(0, 122, 255, 0.2);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn::after {
  border: none;
}

.save-btn--hover {
  transform: scale(0.98);
  opacity: 0.9;
}

.save-btn--disabled {
  opacity: 0.5;
}

.save-btn__text {
  line-height: 1;
}
