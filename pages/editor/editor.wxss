/* pages/editor/editor.wxss */
.editor-page {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(--color-bg);
  z-index: 100;
}

/* 自定义导航栏 */
.editor-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 200;
  box-sizing: border-box;
}

.editor-header__blur {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(242, 242, 247, 0.8);
  backdrop-filter: blur(40rpx);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.editor-header__content {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 32rpx;
}

/* 三列布局：左-中-右 */
.editor-header__left {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.editor-header__center {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}

.editor-header__right {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.editor-header__title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-main);
}

.editor-header__btn-text {
  font-size: 34rpx;
  color: var(--text-main);
}

.editor-header__btn-text--primary {
  color: #007AFF;
}

.editor-header__icon {
  width: 50rpx; 
  height: 50rpx; 
}

/* 滚动区域 */
.editor-scroll {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 160rpx;
}

.editor-content {
  padding: 32rpx 0;
}

.editor-bottom-spacer {
  height: 64rpx;
}

/* 照片上传区 */
.photo-section {
  display: flex;
  justify-content: center;
  margin-bottom: 48rpx;
}

.photo-upload {
  width: 240rpx;
  height: 240rpx;
  border-radius: 48rpx;
  background-color: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: visible;
  position: relative;
}

.photo-upload__placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  box-sizing: border-box;
}

.photo-upload__text {
  font-size: 26rpx;
  color: #999999;
  text-align: center;
  line-height: 1.4;
}

.photo-upload__image {
  width: 100%;
  height: 100%;
  border-radius: 48rpx;
}

/* 修改按钮 - 右下角悬浮圆形黑色按钮，圆心与照片右下角重合 */
.photo-upload__edit-btn {
  position: absolute;
  right: -15rpx;
  bottom: -15rpx;
  width: 56rpx;
  height: 56rpx;
  background-color: rgba(0, 0, 0, 1);
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.photo-upload__edit-icon {
  font-size: 28rpx;
  color: #FFFFFF;
}

/* 表单组 */
.form-group {
  margin: 0 32rpx 24rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.form-group--tags {
  padding: 32rpx;
}

.form-group--notes {
  padding: 32rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
}

.form-item--border {
  border-bottom: 1rpx solid rgba(198, 198, 200, 0.3);
}

.form-label {
  display: flex;
  align-items: center;
  gap: 16rpx;
  min-width: 160rpx;
}

.form-icon {
  font-size: 50rpx; 
  width: 50rpx;
  height: 50rpx;
  opacity: 0.6;
  display: inline-block;
  line-height: 1;
}

.form-label-text {
  font-size: 34rpx;
  color: var(--text-main);
}

.form-input {
  flex: 1;
  font-size: 34rpx;
  color: var(--text-main);
  text-align: right;
}

.form-input-placeholder {
  color: var(--text-placeholder);
}

/* 价格输入框容器 */
.price-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.price-prefix {
  font-size: 34rpx;
  color: var(--text-main);
  margin-right: 4rpx;
}

.form-input--price {
  flex: none;
  width: 180rpx;
  text-align: right;
}

/* 评分星星 */
.rating-stars {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  gap: 8rpx;
}

.rating-star {
  font-size: 56rpx;
  color: #E5E5EA;
  transition: all 0.2s ease;
}

.rating-star--filled {
  color: #FF9500;
}

/* 标签相关 */
.form-tags-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-chip {
  padding: 12rpx 32rpx;
  background-color: #E5E5EA;
  color: rgba(0, 0, 0, 0.7);
  border-radius: 100rpx;
  font-size: 30rpx;
  font-weight: 500;
  transition: all 0.2s ease;
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
}

.tag-chip--selected {
  background-color: #007AFF !important;
  color: #FFFFFF !important;
}

.tag-chip--selected .tag-chip__text {
  color: #FFFFFF;
}

.tag-chip__text {
  line-height: 1;
  color: inherit;
}

.tag-chip__close {
  font-size: 36rpx;
  opacity: 0.7;
  line-height: 1;
}

.custom-tag-section {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(198, 198, 200, 0.3);
}

.custom-tag-trigger {
  display: inline-flex;
  padding: 12rpx 32rpx;
  background-color: #E5E5EA;
  border-radius: 100rpx;
}

.custom-tag-trigger__text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.custom-tag-input-box {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

/* 胶囊样式的输入框 */
.custom-tag-chip {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 32rpx;
  background-color: #E5E5EA;
  border-radius: 100rpx;
}

.custom-tag-chip__input {
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.7);
  width: 200rpx;
}

.custom-tag-placeholder {
  color: #999999;
}

/* 添加/取消文字按钮 */
.custom-tag-action {
  font-size: 28rpx;
  color: #007AFF;
  font-weight: 500;
  padding: 8rpx;
}

.custom-tag-action--cancel {
  color: #999999;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  min-height: 240rpx;
  font-size: 34rpx;
  color: var(--text-main);
  line-height: 1.6;
}

/* 底部操作栏 */
.editor-footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 32rpx;
  z-index: 100;
}

.editor-footer__blur {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(242, 242, 247, 0.9);
  backdrop-filter: blur(40rpx);
}

.editor-footer__buttons {
  position: relative;
  display: flex;
  gap: 24rpx;
}

/* 操作按钮通用样式 */
.action-btn {
  flex: 1;
  height: 100rpx;
  border-radius: 28rpx;
  font-size: 34rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn::after {
  border: none;
}

.action-btn--hover {
  transform: scale(0.98);
  opacity: 0.9;
}

.action-btn--disabled {
  opacity: 0.5;
}

/* 保存按钮 */
.action-btn--save {
  background-color: #007AFF;
  color: #FFFFFF;
  box-shadow: 0 16rpx 40rpx rgba(0, 122, 255, 0.2);
}

.action-btn--full {
  flex: none;
  width: 100%;
}

/* 删除按钮 */
.action-btn--delete {
  background-color: #FFFFFF;
  color: #FF3B30;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.action-btn__text {
  line-height: 1;
}
